{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "openrouter/meta-llama/llama-3.1-8b-instruct:free",
  "max_tokens": 1000,
  "autoupdate": true,
  "permission": {
    "edit": "allow",
    "bash": "ask",
    "webfetch": "deny",
    "doom_loop": "ask",
    "external_directory": "ask"
  },
  "security": {
    "bash_allowlist": [
      "ls",
      "cat",
      "head",
      "tail",
      "wc",
      "grep",
      "npm",
      "node",
      "git",
      "ps",
      "lsof",
      "sleep",
      "pkill"
    ]
  }
}